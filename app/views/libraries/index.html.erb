<p id="notice"><%= notice %></p>

<h1>Libraries</h1>

<table>
  <thead>
    <tr>
      <th>Book title</th>
      <th></th>
      <th>Author</th>
      <th></th>
      <th>Publish year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.book_title %></td>
        <td></td>
        <td><%= library.author %></td>
        <td></td>
        <td><%= library.publish_year %></td>
        <td><%= link_to 'Show', edit_library_path(library) %></td>
         
        <% if current_user %>
          <% if current_user.admin == true || current_user.librarian == true %>
            <td><%= link_to 'Edit', edit_library_path(library) %></td>
            <td><%= link_to 'Destroy', library_delete_path(library), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
  <% if current_user.admin == true || current_user.librarian == true %>
    <%= link_to 'New Book', show_book_path %>
  <% end %>
<% end %>